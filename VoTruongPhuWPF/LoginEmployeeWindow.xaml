<Window x:Class="VoTruongPhuWPF.LoginEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoTruongPhuWPF"
        mc:Ignorable="d"
        Title="VoTruongPhuWPF.LoginEmployeeWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Welcome Employee" HorizontalAlignment="Left" Margin="260,99,0,0" VerticalAlignment="Top" Height="55" Width="255" FontSize="18"/>
        <Label Content="UserName" HorizontalAlignment="Left" Margin="185,149,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.534,-0.576"/>
        <Label Content="PassWord" HorizontalAlignment="Left" Margin="183,184,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="260,156,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <PasswordBox HorizontalAlignment="Left" Margin="260,191,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnLogin" Content="login" HorizontalAlignment="Left" Margin="265,239,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.388,0.503" Click="BtnLogin_Click"/>
        <Button x:Name="BtnExit" Content="exit" HorizontalAlignment="Left" Margin="335,239,0,0" VerticalAlignment="Top" Click="BtnExit_Click" />


    </Grid>
</Window>
