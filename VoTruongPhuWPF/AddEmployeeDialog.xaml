<Window x:Class="VoTruongPhuWPF.AddEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Employee" Height="400" Width="350" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="15" VerticalAlignment="Center">

        <TextBlock Text="Employee ID:" />
        <TextBox x:Name="txtId" />

        <TextBlock Text="Name:" Margin="0,5,0,0" />
        <TextBox x:Name="txtName" />

        <TextBlock Text="Username:" Margin="0,5,0,0" />
        <TextBox x:Name="txtUserName" />

        <TextBlock Text="Password:" Margin="0,5,0,0" />
        <PasswordBox x:Name="txtPassword" />

        <TextBlock Text="Job Title:" Margin="0,5,0,0" />
        <TextBox x:Name="txtJobTitle" />

        <TextBlock Text="Birth Date:" Margin="0,5,0,0" />
        <DatePicker x:Name="dpBirthDate" />

        <TextBlock Text="Hire Date:" Margin="0,5,0,0" />
        <DatePicker x:Name="dpHireDate" />

        <TextBlock Text="Address:" Margin="0,5,0,0" />
        <TextBox x:Name="txtAddress" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="80" Margin="5,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5,0" Click="CancelButton_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
